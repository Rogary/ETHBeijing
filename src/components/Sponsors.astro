---
import i18next, { t } from "i18next";
const cardData = [
  {
    img: "/images/sponsors/3.png",
  },
  {
    img: "/images/sponsors/9.png",
  },
  {
    img: "/images/sponsors/8.png",
  },
  {
    img: "/images/sponsors/10.png",
  },
  {
    img: "/images/sponsors/1.png",
  },
  {
    img: "/images/sponsors/5.png",
  },
  {
    img: "/images/sponsors/7.png",
  },
  {
    img: "/images/sponsors/6.png",
  },
  {
    img: "/images/sponsors/11.png",
  },
];
---

<section class="container">
  <div class="title flex items-center gap-x-3 text-neutral-900">
    <img src="/images/heart.svg" height="35.76" width="33" />
    <span class="title"
      >{t("sponsors.title")}</span
    >
  </div>
  <div class="flex flex-wrap justify-center gap-5 mt-[60px] mb-[100px]">
    {
      cardData.map((item) => {
        return (
          <div class="card_box flex">
            <div class="avatar">
              <img
                class={`avatar_img ${
                  item.img == "/images/token-pocket.png" ||
                  item.img == "/images/aspecta.png" ||
                  item.img == "/images/bixin.png"
                    ? "w-[240px]"
                    : "w-[150px]"
                }`}
                src={item.img}
              />
            </div>
          </div>
        );
      })
    }
  </div>
</section>

<style>
  .container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 100px;
  }
  .title {
    font-family: Inter;
    font-size: 36px;
    font-weight: 700;
    line-height: 44px;
    letter-spacing: 0em;
    text-align: center;
  }

  .card_box {
    height: 96px;
    width: 340px;
    border-radius: 10px;
    padding: 20px;
    border: 0.5px solid #9ca3af;
    background: #ffffff;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 16px 20px;
  }
</style>
